extends layout

block content
  section.contact
    .container
      h1.section-title Get In Touch

      p.contact-description
        | I'm always open to discussing new projects, creative ideas, or opportunities.
        | Feel free to reach out!

      .social-links
        a.social-link(href="https://github.com/jb9k62", target="_blank", rel="noopener noreferrer", aria-label="GitHub Profile")
          i(data-lucide="github")
          span GitHub
        a.social-link(href="https://linkedin.com/in/jordancolehunt", target="_blank", rel="noopener noreferrer", aria-label="LinkedIn Profile")
          i(data-lucide="linkedin")
          span LinkedIn

      form#contact-form.contact-form(action="/api/contact", method="POST")
        .form-group
          label(for="name") Name
          input#name(type="text", name="name", required)

        .form-group
          label(for="email") Email
          input#email(type="email", name="email", required)

        .form-group
          label(for="message") Message
          textarea#message(name="message", rows="5", required)

        .form-group
          .h-captcha(data-sitekey=hcaptchaSiteKey)

        button.submit-button(type="submit") Send Message

        #form-message.form-message

block scripts
  script(src="https://js.hcaptcha.com/1/api.js", async, defer)
  script(src="/script.js")
  script.
    // Initialize Lucide icons
    lucide.createIcons();
