doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title= title || "Jordan Cole Hunt"
    link(rel="stylesheet", href="/styles/main.css")
    link(rel="stylesheet", href="/styles/transitions.css")
    link(rel="stylesheet", href="/styles/components.css")
    link(rel="preconnect", href="https://fonts.googleapis.com")
    link(rel="preconnect", href="https://fonts.gstatic.com", crossorigin)
    link(href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300;400;500;600;700&display=swap", rel="stylesheet")

  body(data-page=page || "")
    //- Navigation (persistent across all pages)
    include mixins/nav
    +nav(currentPath)

    //- Main content container (animated by View Transitions API)
    main
      block content

    //- Footer (persistent across all pages)
    include mixins/footer
    +footer()

    //- Scripts
    script(src="https://cdn.jsdelivr.net/npm/gsap@3.12.5/dist/gsap.min.js")
    script(src="/js/transitions.js")
    script(src="/js/app.js", type="module")
    block scripts
